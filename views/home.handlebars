<!-- home.handlebars -->
<div class="row">
{{#each gifs}}
{{!-- set the data-width to whatever you want --}}
{{!-- Note that we're using properties of the gif (id, itemurl, url) to fill in information needed to render the gif --}}
    <div class="tenor-gif-embed m-3" data-postid="{{this.id}}" data-share-method="host" data-width="500px"
      data-aspect-ratio="1.2266666666666666"><a
          href="{{this.itemurl}}"></a>
      <a href="{{this.url}}"></a>
      <span class="border border-dark"></span></div>
{{/each}}
</div>
    <script type="text/javascript" async src="https://tenor.com/embed.js"></script>